{
    "background": {
		"scripts": ["TabCloseScript.js"],
		"persistent": false
  },
   "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Close Tabs to the Right"
   },
   "description": "Adds a button to close all tabs to the right of the current tab",
   "icons": { "16": "icon_16.png",
           "48": "icon_48.png",
          "128": "icon_128.png" },
   "manifest_version": 2,
   "name": "Close Tabs to the Right",
   "permissions": [ "tabs" ],
   "short_name": "CloseToRight",
   "version": "1.0"
}
